<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="lipan.com.pasieniatask.LoginRegisterActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:layout_alignParentBottom="true" />
    <RelativeLayout
        android:id="@+id/tab_menus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_pager"
        android:clipToPadding="false"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="@color/colorPrimary"
            android:id="@+id/relative_layout_additional_space"
            android:elevation="2dp" />

        <Button
            android:id="@+id/tab_masuk"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="160dp"
            android:background="@drawable/rounded_shape_button"
            android:elevation="4dp"
            android:inputType="text"
            android:text="Masuk"
            android:textColor="@drawable/text_button"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tab_daftar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="160dp"
            android:layout_marginRight="27dp"
            android:background="@drawable/rounded_shape_button"
            android:elevation="4dp"
            android:inputType="text"
            android:text="Daftar"
            android:textColor="@drawable/text_button"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_layout_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/tab_menus"
        android:background="@color/colorPrimary" />
</RelativeLayout>
